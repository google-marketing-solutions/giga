{
  "ignore": [
    ".claspignore",
    ".editorconfig",
    ".eslintignore",
    ".gitignore",
    ".prettierignore",
    "*.txt",
    ".github",
    "CONTRIBUTING",
    "build",
    "dist",
    "deploy.sh",
    ".env",
    "gemini*.md"
  ],
  "license": "license-header.txt",
  "licenseFormats": {
    "js|ts|mjs": {
      "prepend": "/**",
      "append": " */",
      "eachLine": {
        "prepend": " * "
      }
    },
    "html|md": {
      "prepend": "<!--",
      "append": "-->"
    },
    "sh|^pre-commit": {
      "eachLine": {
        "prepend": "# "
      }
    },
    "default": {
      "prepend": "/*",
      "append": "*/"
    }
  },
  "trailingWhitespace": "TRIM"
}
